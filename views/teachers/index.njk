{% extends "layout.njk" %}

{% block content %}

    <div class="barra_superior">
        <a class="create" href="/teachers/create">Novo</a>
        <input class="pesquisa" type="text" name="pesquisa">
        <a class="create" href="#">Pesquisar</a>
    </div>


    <div class="card table-container">
        
        <table width="100%">
            <thead>
                <tr>
                    <th>Teacher</th>
                    <th>Acompanhamento</th>
                    <th>Ação</th>
                </tr>
            </thead>

            <tbody>
                {% for teacher in teachers %}
                <tr>
                    <td>
                        <span style="background-image: url({{ teacher.avatar_url }})"></span>
                        {{ teacher.name}}
                    </td>
                    <td>
                        {# {% for matter in teacher.matters %} #}
                        <span class="item">{{teacher.matters}}</span>
                        {# {% endfor %} #}
                    </td>
                    <td><a href="/teachers/{{teacher.id}}">ver</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        
    </div>
{% endblock content %}