<section class="details">
        <div class="item">
            <div>Avatar URL</div>
            <div>
                <input 
                    type="url" 
                    name="avatar_url"
                    placeholder="http://"
                    value="{{ teacher.avatar_url }}"
                >
            </div>
        </div>

        <div class="item">
            <div>Teacher</div>
            <div>
                <input 
                    type="text" 
                    name="name"
                    placeholder="Nome do Professor"
                    value="{{ teacher.name }}"
                >
            </div>
        </div>

        <div class="item">
            <div>Data de nascimento</div>
            <div>
                <input 
                    type="date" 
                    name="birth"
                    value="{{ teacher.birth }}"
                >
            </div>
        </div>

        <div class="item">
            <div>Grau de escolaridade</div>
            <div>
               <select name="scholarity">
                   <option value="" selected >Escolha uma opção</option>

                   <option 
                        value="EMC" {% if teacher.scholarity == 'EMC' %}
                        selected {% endif %}>Ensino Médio Completo
                    </option>
                    <option 
                        value="ESC" {% if teacher.scholarity == 'ESC' %}
                        selected {% endif %}>Superior Completo
                    </option>
                    <option 
                        value="MC" {% if teacher.scholarity == 'MC' %}
                        selected {% endif %}>Mestrado
                    </option>
                    <option 
                        value="DC" {% if teacher.scholarity == 'DC' %}
                        selected {% endif %}>Doutorado
                    </option>
                </select>
            </div>
        </div>

        <div class="item">
            <div>Tipo de aula</div>
            <div>
                <span>
                    <input 
                        type="radio" 
                        name="lesson" 
                        value="P"
                        {% if teacher.lesson == 'P' %} 
                        checked
                        {% endif %}>Presencial
                </span>
                <span>
                    <input 
                        type="radio" 
                        name="lesson" 
                        value="A"
                        {% if teacher.lesson == 'A' %} 
                        checked
                        {% endif %}>À Distancia
                </span>
            </div>
        </div>

        <div class="item">
            <div>Área de atuação</div>
            <div>
                <input 
                    type="text" 
                    name="matters"
                    placeholder="Separe as matérias que pode atuar por vírgula"
                    value="{{ teachers.matters }}"
                >
            </div>
        </div>

         <button type="submit">Salvar</button>
</section>