{% extends "layout.njk" %}

{% block content %}
<form class="card" method="POST" action="/teachers">
    <section class="avatar" style="background: url(https://source.unsplash.com/collection/10553730/500x500) no-repeat center center / cover">
        
    </section>

    <section class="details">
        <div class="topo">
            <h3>Novo Teacher</h3>
        </div>

        <div class="item">
            <div>Avatar URL</div>
            <div>
                <input 
                    type="url" 
                    name="avatar_url"
                    placeholder="http://"
                >
            </div>
        </div>

        <div class="item">
            <div>Teacher</div>
            <div>
                <input 
                    type="text" 
                    name="name"
                    placeholder="Nome do Professor"
                >
            </div>
        </div>

        <div class="item">
            <div>Data de nascimento</div>
            <div>
                <input 
                    type="date" 
                    name="birth"
                >
            </div>
        </div>

        <div class="item">
            <div>Grau de escolaridade</div>
            <div>
               <select name="scholarity">
                   <option value="" selected >Escolha uma opção</option>
                   <option value="Ensino Medio">Ensino Médio Completo</option>
                   <option value="Ensino Superior">Ensino Superior Completo</option>
                   <option value="Mestrado">Mestrado</option>
                   <option value="Doutorado">Doutorado</option>
               </select>
            </div>
        </div>

        <div class="item">
            <div>Tipo de aula</div>
            <div>
                <span><input type="radio" name="lesson" value="Presencial" checked>Presencial</span>
                <span><input type="radio" name="lesson" value="À distancia">À distância</span>
            </div>
        </div>

        <div class="item">
            <div>Área de atuação</div>
            <div>
                <input 
                    type="text" 
                    name="matter"
                    placeholder="Separe as matérias que pode atuar por vírgula"
                >
            </div>
        </div>

         <button type="submit">Salvar</button>

    </section>
</form>

{% endblock %}